<h1>Book</h1>
<% @books.each do |book| %>
<thead>
  <tr>
    <th>Title</th>
    <span><%= book.title %></span>

    <th>Body</th>
     <span><%= book.body %></span>
    <th colspan="3"></th>
  </tr>
</thead>
<%end %>

<table>
  <thead>
    <th>
      Title
    </th>
    <th>
      Body
    </th>
    <th>
    </th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
       <%= link_to 'Show',  books_show_path(id:1) %>
    </tr>
  <%end %>
  </tbody>

</table>



<h1>Books</h1>
<%=form_with model: @book do |f| %>
<h4>Title</h4>
<%=f.text_field :title %>

<h4>Body</h4>
<%=f.text_area :body %>
<%= f.submit'投稿'%>
<% end %>
